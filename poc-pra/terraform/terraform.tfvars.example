# terraform.tfvars.example
# Copier ce fichier en terraform.tfvars et ajuster les valeurs

environment = "dev"

# Localisations
onprem_location = "francecentral"
azure_location  = "francecentral"

# Network Configuration
onprem_address_space       = "192.168.0.0/16"
onprem_subnet_cidr         = "192.168.1.0/24"
azure_address_space        = "10.1.0.0/16"
azure_gateway_subnet_cidr  = "10.1.255.0/24"
azure_default_subnet_cidr  = "10.1.1.0/24"

# VM Configuration
vm_size        = "Standard_B1s"
admin_username = "azureuser"

# SSH Key - Choisir l'une des deux options:
# Option 1: Utiliser le chemin vers votre clé SSH
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# Option 2: Ou fournir directement le contenu de la clé
# ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAA..."

# IPsec Pre-Shared Key (IMPORTANT: Utiliser un mot de passe très fort)
# Générer avec: openssl rand -base64 32
ipsec_psk = "CHANGEME_USE_STRONG_PASSWORD_HERE"

# VPN Gateway SKU
vpn_gateway_sku = "VpnGw1"
